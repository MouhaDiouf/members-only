<h1> Post form </h1>

<div class="col-md-6 col-md-offset-3">
    <%= form_for(@post) do |f| %>

      <%= f.label :title %> <br>
      <%= f.text_field :title, class: 'form-control' %> <br>

     <%= f.label :content%> <br> 
     <%= f.text_area :content, size: '50x10' %> <br>
      <%= f.submit "Post", class: "btn btn-primary" %>
    <% end %>
